<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".implement.feature.home.HomeActivity">

    <View
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/bg_primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_title_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/tv_title_home"
        android:fontFamily="@font/fira_sans_bold"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_subtitle_home"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_subtitle_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:fontFamily="@font/fira_sans"
        android:text="@string/tv_subtitle_home"
        app:layout_constraintBottom_toBottomOf="@+id/bg"
        app:layout_constraintStart_toStartOf="@+id/bg"/>

    <ImageView
        android:id="@+id/ic_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_cart"
        app:layout_constraintTop_toTopOf="@+id/tv_title_home"
        app:layout_constraintBottom_toBottomOf="@+id/tv_subtitle_home"
        app:layout_constraintEnd_toStartOf="@+id/ic_logout"/>

    <ImageView
        android:id="@+id/ic_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_logout"
        app:layout_constraintTop_toTopOf="@+id/tv_title_home"
        app:layout_constraintBottom_toBottomOf="@+id/tv_subtitle_home"
        app:layout_constraintEnd_toEndOf="@+id/bg"/>

    <TextView
        android:id="@+id/tv_browse_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/fira_sans_medium"
        android:text="@string/tv_browse_room"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bg" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ic_live_room"
        android:layout_width="175dp"
        android:layout_height="100dp"
        android:layout_marginTop="14dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_launcher_background"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toBottomOf="@+id/tv_browse_room"
        app:layout_constraintStart_toStartOf="parent"
        app:shapeAppearanceOverlay="@style/roundedImageView"/>

    <TextView
        android:id="@+id/tv_live_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:text="@string/live_room"
        android:fontFamily="@font/fira_sans_medium"
        app:layout_constraintTop_toTopOf="@+id/ic_live_room"
        app:layout_constraintEnd_toEndOf="@+id/ic_live_room"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ic_children_room"
        android:layout_width="175dp"
        android:layout_height="100dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_launcher_background"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toBottomOf="@+id/tv_browse_room"
        app:layout_constraintEnd_toEndOf="parent"
        app:shapeAppearanceOverlay="@style/roundedImageView"/>

    <TextView
        android:id="@+id/tv_children_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:text="@string/children_room"
        android:fontFamily="@font/fira_sans_medium"
        app:layout_constraintTop_toTopOf="@+id/ic_children_room"
        app:layout_constraintEnd_toEndOf="@+id/ic_children_room"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ic_bed_room"
        android:layout_width="175dp"
        android:layout_height="100dp"
        android:layout_marginTop="14dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_launcher_background"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toBottomOf="@+id/ic_live_room"
        app:layout_constraintStart_toStartOf="parent"
        app:shapeAppearanceOverlay="@style/roundedImageView"/>

    <TextView
        android:id="@+id/tv_bed_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:text="@string/bed_room"
        android:fontFamily="@font/fira_sans_medium"
        app:layout_constraintTop_toTopOf="@+id/ic_bed_room"
        app:layout_constraintEnd_toEndOf="@+id/ic_bed_room"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ic_decoration"
        android:layout_width="175dp"
        android:layout_height="100dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_launcher_background"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toBottomOf="@+id/ic_live_room"
        app:layout_constraintEnd_toEndOf="parent"
        app:shapeAppearanceOverlay="@style/roundedImageView"/>

    <TextView
        android:id="@+id/tv_decoration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:text="@string/decoration"
        android:fontFamily="@font/fira_sans_medium"
        app:layout_constraintTop_toTopOf="@+id/ic_decoration"
        app:layout_constraintEnd_toEndOf="@+id/ic_decoration"/>

    <TextView
        android:id="@+id/tv_just_arrived"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:text="@string/tv_just_arrived"
        android:fontFamily="@font/fira_sans_medium"
        app:layout_constraintTop_toBottomOf="@+id/ic_bed_room"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/tv_just_arrived"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_product"/>

</androidx.constraintlayout.widget.ConstraintLayout>