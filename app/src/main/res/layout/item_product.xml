<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    app:cardCornerRadius="8dp"
    app:contentPadding="0dp"
    app:cardElevation="4dp"
    app:cardMaxElevation="4dp"
    android:layout_marginBottom="8dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivItemPoetry"
            android:layout_width="110dp"
            android:layout_height="160dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_launcher_background"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tvItemTitlePoetry"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fira_sans_medium"
            android:maxLines="1"
            android:ellipsize="end"
            android:textStyle="normal"
            android:textSize="13sp"
            android:textColor="#333333"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivItemPoetry"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="6dp"
            android:text="Cangkir Mauttie"/>

        <TextView
            android:id="@+id/tvCreatorPoetry"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fira_sans"
            android:textStyle="normal"
            android:textSize="12sp"
            android:textColor="#333333"
            app:layout_constraintTop_toBottomOf="@id/tvItemTitlePoetry"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="3dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:text="Rp89.000"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>